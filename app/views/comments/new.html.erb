<h1>Add a Comment</h1>

<div class="row">
    <div class="col-md-5 col-md-offset-3">

        <%= form_for(@comment, url: post_comments_path) do |f| %>
            
            <div class="form-group">
                <%= f.label :content %>
                <%= f.text_field :content %>
            </div>
            <br><br>

            <%= f.submit "Submit", class: "btn btn-primary" %>
            <br><br>
        <% end %>
    </div>
</div>